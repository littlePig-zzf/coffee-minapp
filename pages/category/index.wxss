/**index.wxss**/
.category-list {
  color: #000;
  font-size: 28rpx;
}
.category-list-item {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2px 7px rgba(0,0,0,.15);
  overflow: hidden;
}
.category-item-title {
  font-size: 30rpx;
  font-weight: bold;
}
.category-more-info {
  margin-top: 20rpx;
  color: #3a3a3a;
  font-size: 26rpx;
  transition: all .1s ease-in-out;
}
.category-item-avatar {
  flex: none;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.category-item-avatar image {
  width: 100%;
  border-radius: 10rpx;
}