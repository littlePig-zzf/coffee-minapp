.navMenu-item-content {
  margin: 20px 0 30px;
}
.navMenu-item-content-list {
  margin: 10px 0;
  color: #3a3a3a;
}
.navMenu-wrap {
  width: 100%;
  height: 82rpx;
  display: flex;
  justify-content: space-around;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  border-bottom: 2px solid rgb(238, 238, 238);
}

.navMenu-list {
  color: #868686;
  font-size: 30rpx;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  padding: 0 30rpx;
  border-radius: 2px;
  border-bottom: 2px solid transparent;
}

.navMenu-list.on {
  border-bottom: 2px solid rgb(51, 51, 51);
  color: #212024;
  font-weight: bold;
}